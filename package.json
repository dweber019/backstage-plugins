{
  "name": "root",
  "homepage": "https://github.com/dweber019/backstage-plugins",
  "repository": {
    "type": "git",
    "url": "https://github.com/dweber019/backstage-plugins.git"
  },
  "license": "MIT",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "18 || 20"
  },
  "scripts": {
    "dev": "concurrently \"yarn start\" \"yarn start-backend\"",
    "start": "yarn workspace app start",
    "start-backend": "yarn workspace backend start",
    "build:backend": "yarn workspace backend build",
    "build:all": "backstage-cli repo build --all",
    "build-image": "yarn workspace backend build-image",
    "tsc": "tsc",
    "tsc:full": "tsc --skipLibCheck false --incremental false",
    "clean": "backstage-cli repo clean",
    "test": "backstage-cli repo test",
    "test:all": "backstage-cli repo test --coverage",
    "test:e2e": "playwright test",
    "fix": "backstage-cli repo fix",
    "lint": "backstage-cli repo lint --since origin/{{defaultBranch}}",
    "lint:all": "backstage-cli repo lint",
    "prettier:check": "prettier --check .",
    "new": "backstage-cli new --scope internal",
    "version": "changeset version && yarn install --no-immutable && (git commit -am 'Update internal dependencies' || true)",
    "release": "changeset publish",
    "prepare": "husky install",
    "postinstall": "husky install || true"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "plugins/**"
    ]
  },
  "dependencies": {
    "@changesets/cli": "^2.18.0"
  },
  "devDependencies": {
    "@backstage/cli": "^0.26.4",
    "@backstage/e2e-test-utils": "^0.1.1",
    "@playwright/test": "^1.32.3",
    "@spotify/prettier-config": "^12.0.0",
    "concurrently": "^8.0.0",
    "lerna": "^7.3.0",
    "lint-staged": "^13.0.3",
    "node-gyp": "^9.0.0",
    "prettier": "^2.3.2",
    "typescript": "5.0.4"
  },
  "resolutions": {
    "@types/react": "^18",
    "@types/react-dom": "^18"
  },
  "prettier": "@spotify/prettier-config",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@3.2.4",
  "jest": {
    "testPathIgnorePatterns": [
      "packages"
    ]
  }
}
